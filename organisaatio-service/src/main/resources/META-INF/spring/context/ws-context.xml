<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:beans="http://www.springframework.org/schema/beans" xmlns:mvc="http://www.springframework.org/schema/cache"
       xmlns:cache="http://www.springframework.org/schema/cache"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
        http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
        http://www.springframework.org/schema/cache http://www.springframework.org/schema/cache/spring-cache.xsd">

    <!-- embed cxf into spring http://cxf.apache.org/docs/embedding-cxf-inside-spring.html -->
    <import resource="classpath:META-INF/cxf/cxf.xml" />
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

    <!--
        REST Services
    -->

    <!-- NON SERVICE VERSION -->
    <bean id="oidService" class="fi.vm.sade.organisaatio.service.oid.OrganisaatioOIDServiceImpl" />

    <!-- object to json -->
    <!--<bean id="organisaatioObjectMapper" class="com.fasterxml.jackson.databind.ObjectMapper" />-->

    <bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
        <property name="objectMapper">
            <bean class="com.fasterxml.jackson.databind.ObjectMapper">
                <property name="serializationInclusion" value="NON_NULL" />
            </bean>
        </property>
        <!--<property name="targetObject" ref="organisaatioObjectMapper"/>-->
        <!--<property name="targetMethod" value="setSerializationInclusion"/>-->
        <!--<property name="arguments">-->
            <!--<util:list>-->
                <!--<util:constant static-field="com.fasterxml.jackson.databind.SerializationConfig.Feature.WRITE_NULL_PROPERTIES" />-->
                <!--<util:constant static-field="java.lang.Boolean.FALSE" />-->
            <!--</util:list>-->
        <!--</property>-->
    </bean>
    <!--<mvc:annotation-driven />-->


    <!--<bean id="organisaatioJacksonJsonProvider" class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider">-->
        <!--<property name="mapper" ref="organisaatioObjectMapper" />-->
    <!--</bean>-->

    <jaxws:endpoint xmlns="http://cxf.apache.org/jaxws" address="/services/organisaatioService" implementor="#organisaatioWs"  serviceName="tns:OrganisaatioService" xmlns:tns="http://model.api.organisaatio.sade.vm.fi" />
    <jaxws:endpoint xmlns="http://cxf.apache.org/jaxws" address="/services/koulutustarjoajaPublicService" implementor="#koulutustarjoajaPublicService" serviceName="tns:KoulutustarjoajaPublicService" xmlns:tns="http://service.tarjoaja.sade.vm.fi" />

    <!-- Filters to handle caller-id and ID chain -->
    <bean id="inputFilter" class="fi.vm.sade.organisaatio.service.filters.InputFilter"/>
    <bean id="outputFilter" class="fi.vm.sade.organisaatio.service.filters.OutputFilter"/>

    <jaxrs:server id="rest" address="/rest">
        <jaxrs:serviceBeans>
            <ref bean="organisaatioResourceImpl"/>
            <ref bean="organisaatioResourceImplV2"/>
            <ref bean="indexerResource"/>
            <ref bean="kelaResource"/>
            <ref bean="ytjResource"/>
            <ref bean="yhteystietojenTyyppiResource"/>
            <ref bean="tempfileResource"/>
            <ref bean="sessionResource"/>
            <ref bean="organisaatioDevResource"/>
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <ref bean="apiListingResourceJSON" />
            <ref bean="apiDeclarationProvider" />
            <!--<ref bean="organisaatioJacksonJsonProvider" />-->
            <ref bean="inputFilter" />
            <ref bean="outputFilter" />
        </jaxrs:providers>
    </jaxrs:server>

    <!--Swagger API listing resource-->
    <bean id="apiListingResourceJSON" class="io.swagger.jaxrs.listing.ApiListingResource" />
    <bean id="apiDeclarationProvider" class="io.swagger.jaxrs.listing.SwaggerSerializers" />

    <bean id="beanConfig" class="io.swagger.jaxrs.config.BeanConfig">
        <property name="resourcePackage" value="io.swagger.resource,fi.vm.sade.organisaatio" />
        <property name="version" value="1.0.0" />
        <property name="schemes" value="https" />
        <property name="host" value="${host.virkailija}" />
        <property name="basePath" value="/organisaatio-service/rest" />
        <property name="title" value="Organisaatio resources ${host.virkailija}" />
        <property name="description" value="Organisaatio offered resources" />
        <property name="contact" value="" />
        <property name="license" value="Apache 2.0 License" />
        <property name="licenseUrl" value="http://www.apache.org/licenses/LICENSE-2.0.html" />
        <property name="scan" value="true" />
    </bean>

</beans>
