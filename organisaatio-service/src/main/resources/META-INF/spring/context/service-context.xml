<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
    ">

    <context:annotation-config/>
    <context:component-scan base-package="fi.vm.sade.organisaatio.service"/>
    <context:component-scan base-package="fi.vm.sade.security" />
    
    <bean id="organisaatioConverter" class="fi.vm.sade.organisaatio.service.converter.ConverterFactory"/>

    <bean id="org.dozer.Mapper" class="org.dozer.DozerBeanMapper">
        <property name="mappingFiles">
            <list>
                <value>dozer-mapping.xml</value>
            </list>
        </property>
    </bean>

    <bean id="modelMapper" class="org.modelmapper.ModelMapper" />

    <bean id="ryhmaCriteriaV2ToV3Converter" class="fi.vm.sade.organisaatio.service.converter.v2.RyhmaCriteriaV2ToV3Converter">
        <constructor-arg index="0" ref="modelMapper" />
    </bean>

    <bean id="ryhmaCriteriaV3Converter" class="fi.vm.sade.organisaatio.service.converter.v3.RyhmaCriteriaV3Converter">
        <constructor-arg index="0" ref="modelMapper" />
    </bean>

    <!-- Conversion service, note: Old converters are not using spring conversion framework -->
    <!-- If this was called id=conversionService spring-session injects this and won't work! -->
    <bean id="sadeConversionService"
          class="fi.vm.sade.generic.service.conversion.SadeConversionServiceFactoryBean">
        <property name="converters">
            <list>
                <bean class="fi.vm.sade.organisaatio.service.converter.OrganisaatioToOrganisaatioRDTOConverter"/>
                <bean class="fi.vm.sade.organisaatio.service.converter.OrganisaatioRDTOToOrganisaatioConverter"/>
                <bean class="fi.vm.sade.organisaatio.service.converter.YhteystietojenTyyppiToYhteystietojenTyyppiRDTOConverter"/>
                <bean class="fi.vm.sade.organisaatio.service.converter.v3.OrganisaatioToOrganisaatioRDTOV3Converter"/>
                <bean class="fi.vm.sade.organisaatio.service.converter.v3.OrganisaatioRDTOV3ToOrganisaatioConverter"/>
                <bean class="fi.vm.sade.organisaatio.service.converter.LisatietoConverter"/>
                <ref bean="ryhmaCriteriaV2ToV3Converter"/>
                <ref bean="ryhmaCriteriaV3Converter"/>
                <bean class="fi.vm.sade.organisaatio.service.converter.OrganisaatioToOrganisaatioPerustietoConverter"/>
            </list>
        </property>
    </bean>

    <bean id="organisaatioModelMapper" class="fi.vm.sade.organisaatio.dto.mapping.OrganisaatioModelMapper"/>
    <bean id="organisaatioNimiModelMapper" class="fi.vm.sade.organisaatio.dto.mapping.OrganisaatioNimiModelMapper"/>
    <bean id="searchCriteriaModelMapper" class="fi.vm.sade.organisaatio.dto.mapping.SearchCriteriaModelMapper"/>
    <bean id="organisaatioSuhdeModelMapper" class="fi.vm.sade.organisaatio.dto.mapping.OrganisaatioSuhdeModelMapper"/>
    <bean id="organisaatioLiitosModelMapper" class="fi.vm.sade.organisaatio.dto.mapping.OrganisaatioLiitosModelMapper"/>
    <bean id="groupModelMapperV2" class="fi.vm.sade.organisaatio.dto.mapping.v2.GroupModelMapperV2"/>
    <bean id="groupModelMapperV3" class="fi.vm.sade.organisaatio.dto.mapping.v3.GroupModelMapperV3"/>

</beans>
